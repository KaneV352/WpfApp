        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utils="clr-namespace:WpfApp.Utilities"
        Title="3D Cartesian Canvas" Height="600" Width="800">
    <Grid>
        <!-- <global:CartesianCanvas x:Name="canvas"  -->
        <!--                         Background="White" -->
        <!--                         Scale="5" -->
        <!--                         Grid.Column="0"/> -->
        <utils:Cartesian3dCanvas x:Name="canvas3d"/>
        
