<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shape Drawer" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Panel.ZIndex="10">
            <ToggleButton x:Name="Mode2DButton" Content="2D" IsChecked="True"
                          Checked="Mode2DButton_Checked" Unchecked="Mode2DButton_Unchecked" Width="60"/>
            <ToggleButton x:Name="Mode3DButton" Content="3D" Margin="5,0,0,0"
                          Checked="Mode3DButton_Checked" Unchecked="Mode3DButton_Unchecked" Width="60"/>
            <ComboBox x:Name="ShapeComboBox" Width="120" Margin="20,0,0,0"
                      SelectionChanged="ShapeComboBox_SelectionChanged">
                <ComboBoxItem Content="Circle" Tag="2D"/>
                <ComboBoxItem Content="Ellipse" Tag="2D"/>
                <ComboBoxItem Content="Rectangle" Tag="2D"/>
                <ComboBoxItem Content="Triangle" Tag="2D"/>
                <ComboBoxItem Content="Sphere" Tag="3D"/>
                <ComboBoxItem Content="Cube" Tag="3D"/>
                <ComboBoxItem Content="Pyramid" Tag="3D"/>
            </ComboBox>
            <TextBlock Text="X:" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="CoordXBox" Width="60" Text="200" VerticalAlignment="Center" TextChanged="CoordBox_TextChanged"/>
            <TextBlock Text="Y:" Margin="5,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="CoordYBox" Width="60" Text="150" VerticalAlignment="Center" TextChanged="CoordBox_TextChanged"/>
            <Button x:Name="AddShapeButton" Content="Add Shape" Margin="20,0,0,0" Click="AddShape_Click"/>
            <Button x:Name="DeleteShapeButton" Content="Xóa hình" Margin="5,0,0,0" Click="DeleteShapeButton_Click"/>
        </StackPanel>

        <StackPanel x:Name="InputFieldsPanel" Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10" Panel.ZIndex="10"/>

        <Grid Grid.Row="2">
            <Canvas x:Name="canvas2D" Background="White"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"
                    MouseRightButtonDown="Canvas_MouseRightButtonDown"
                    Loaded="Canvas2D_Loaded"
                    Panel.ZIndex="1"/>
            <Border x:Name="canvas3DPlaceholder" Background="#EEE" Visibility="Collapsed" Panel.ZIndex="2">
                <TextBlock Text="3D View Placeholder" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Gray"/>
            </Border>
        </Grid>
    </Grid>
</Window>